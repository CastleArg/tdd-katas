{
  "name": "tdd-katas",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Daniel Zlotin <zlotindaniel@gmail.com>",
  "publishConfig": {
    "registry": "none"
  },
  "bugs": {
    "url": "https://github.com/wix/tdd-katas/issues"
  },
  "homepage": "https://github.com/wix/tdd-katas",
  "readme": "https://github.com/wix/tdd-katas#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wix/tdd-katas.git"
  },
  "main": "src/index.js",
  "scripts": {
    "build": ":",
    "test": "xo src/**/**/**/**/**/*.js && jest --coverage",
    "watch": "jest --watch",
    "release": ":"
  },
  "dependencies": {
    "lodash": "4.x.x"
  },
  "devDependencies": {
    "jest": "21.x.x",
    "xo": "0.18.x"
  },
  "jest": {
    "roots": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "xo": {
    "space": true,
    "env": [
      "node",
      "jest"
    ],
    "rules": {
      "unicorn/filename-case": 0,
      "arrow-parens": [
        2,
        "always"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
